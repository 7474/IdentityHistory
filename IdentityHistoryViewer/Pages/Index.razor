@page "/"
@inject IHAPI IHAPI

<h1>Identity History</h1>

<div class="alert alert-info">
    You don't know who is who if the icons change? This application stalking Slack icon changes.
</div>

<h2>Teams</h2>

<AuthorizeView>
    <Authorizing>
        <p><em>Authenticating...</em></p>
    </Authorizing>
    <NotAuthorized>
        <p><em>Please Login.</em></p>
    </NotAuthorized>
    <Authorized>
        @if (teams == null)
        {
        <p><em>Loading...</em></p>
        }
        else
        {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in teams)
                    {
                <tr>
                    <td>
                        <NavLink class="nav-link" href="@($"/teams/{team.TeamId}/users")">
                            @team.TeamId
                        </NavLink>
                    </td>
                </tr>
                    }
            </tbody>
        </table>
        }
    </Authorized>
</AuthorizeView>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> authenticationStateTask { get; set; }

    private IList<ListTeam> teams;

    protected override async Task OnInitializedAsync()
    {
        await authenticationStateTask;
        teams = await IHAPI.ListTeams();
    }
}
